---
/**
 * StatCard.astro
 * 
 * Componente de card estatístico para o dashboard.
 * Design minimalista e sofisticado - monocromático.
 */

interface Props {
    title: string;
    value: string | number;
    icon: string;
    link: string;
}

const { title, value, icon, link } = Astro.props;
---

<a 
    href={link}
    class="admin-card p-5 group"
>
    <div class="flex items-start justify-between mb-4">
        <div class="w-10 h-10 rounded-lg bg-[#1a1a1a] flex items-center justify-center text-xl group-hover:bg-[#222222] transition-colors">
            {icon}
        </div>
    </div>
    
    <div class="text-2xl font-heading font-bold text-[#e5e5e5] mb-1">{value}</div>
    <div class="text-sm text-[#a3a3a3] font-medium">{title}</div>
</a>
